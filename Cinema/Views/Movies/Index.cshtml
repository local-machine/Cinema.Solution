@{
  Layout = "_Layout";
}

@using Cinema.Models;
@model List<Cinema.Models.Movie>;

<h1>Movies</h1>

@if (@Model.Count == 0)
{
  <h3>No movies have been added yet!</h3>
} 


  @foreach (Movie movie in Model)
{
  <li>@Html.ActionLink($"{movie.Description}", "Details", new { id = movie.MovieId}) | @movie.Genre.Name</li>
}


<p>@Html.ActionLink("Add new movie", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>